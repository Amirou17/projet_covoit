{% extends 'base.html.twig' %}

{% block body %}
    <div class="jumbotron m-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-12 col-lg-10 col-xl-8 mx-auto">
                    <h2 class="h3 mb-4 page-title">Settings</h2>
                    <div class="my-4">
                        <ul class="nav nav-tabs mb-4" id="myTab" role="tablist">
                            <li class="nav-item">
                                <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="false">Profile</a>
                            </li>
                        </ul>
                        <form>
                            <div class="col-md-3 text-center mb-5">
                                <div class="avatar avatar-xl">
                                    <img src="http://placehold.it/150x150" alt="..." class="avatar-img rounded-circle" />
                                </div>
                            </div>
                            <div class="row mt-5 align-items-center">
                                <div class="col">
                                    <div class="row align-items-center">
                                        <div class="col-md-7">
                                            <h4 class="mb-1">{{ app.user.getLastName }} {{ app.user.getFirstName }}</h4>
                                            <p class="small mb-3"><span class="badge badge-dark">{{ app.user.getPostCode }}, {{ app.user.getTown }}</span></p>
                                        </div>
                                    </div>
                                    <div class="row mb-4 mr-5">
                                        <div class="col">
                                            <h4 class=" mb-1 text-muted">Email : {{ app.user.getEmail }}</h4>
                                            <h4 class=" mb-1 text-muted">Tel : {{ app.user.getPhoneNumber }}</h4>
                                            <h4 class=" mb-1 text-muted">Adresse : {{ app.user.getStreet }}, {{ app.user.getTown }},
                                                {{ app.user.getPostCode }}
                                            </h4>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <hr class="my-4" />
                        </form>
                        <div class="row">
                            <div class="col-sm-12 text-right">
                                <a class="btn btn-primary" href="#">
                                    <span class="glyphicon glyphicon-menu-left" aria-hidden="true"></span>
                                    Rechercher un trajet
                                </a>

